extends layout

block content
    script(src='http://maps.google.com/maps/api/js?key=AIzaSyAmhHjISB0MUEDdB5-5OCbfuxmXwqVibSE')
    script(src='/javascripts/map.js')

    form.form-contact(id='createNoteForm' action='/api/v1/create_note' method='POST') 
        .mdl-grid.site-max-width
            .mdl-cell.mdl-cell--12-col.mdl-shadow--4dp.page-content
                .mdl-card__title
                    h1.mdl-card__title-text create note
                .mdl-card__media
                .mdl-grid.site-copy
                    .mdl-cell.mdl-cell--12-col
                        .mdl-card__supporting-text
                            p Contact our team using the contact form below:

                            #google-maps.google-maps

                            
                            input(type='hidden' id='latTxt')
                            input(type='hidden' id='lngTxt')
                                
                            .mdl-textfield.mdl-js-textfield
                                input.mdl-textfield__input(type='text' id='noteTxt' required autofocus)
                                label.mdl-textfield__label(for='noteTxt') note    

        .mdl-grid.site-max-width
            .mdl-cell.mdl-cell--12-col.mdl-shadow--4dp.page-content
                .mdl-card__title
                    h2.mdl-card__title-text add a picture
                .mdl-card__media
                .mdl-grid.site-copy
                    .mdl-cell.mdl-cell--12-col
                        .mdl-card__supporting-text
                            img(src='' alt='' id='showPictureDiv' border='5')
                .mdl-card__actions.mdl-card--border    
                    label.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect add a picture
                        input(type='file' capture='camera' accept='image/*' style='display: none;' id='takePictureBtn')

        button#submit-button.mdl-button.mdl-button--fab.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-color--accent.mdl-color-text--accent-contrast.mdl-shadow--4dp(type='submit')
            i.material-icons note_add

    script(src='javascripts/controllers/create_note_controller.js')