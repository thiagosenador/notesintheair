extends layout

block content

    script(src='https://maps.google.com/maps/api/js?key=AIzaSyAmhHjISB0MUEDdB5-5OCbfuxmXwqVibSE')
    script(src='/javascripts/location.js')
    
    form.form-contact(id='createNoteForm' action='/api/v1/create_note' method='POST') 
        .mdl-grid
            .mdl-card.mdl-shadow--4dp.new-note-card
                .mdl-card__title
                    label.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect add a picture
                        input(type='file' capture='camera' accept='image/*' style='display: none;' id='takePictureBtn')
                    
                    img(src='' alt='' id='showPictureDiv')
                .mdl-card__supporting-text
                    input(type='hidden' id='latTxt')
                    input(type='hidden' id='lngTxt')
    
                    .mdl-textfield.mdl-js-textfield
                        textarea.mdl-textfield__input(type='text' id='noteTxt' rows='3' maxlength='140')
                        label.mdl-textfield__label(for='noteTxt') your message...
                
                .mdl-card__actions.mdl-card--border
                    button#create-button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='submit') create note

    script(src='javascripts/controllers/create_note_controller.js')