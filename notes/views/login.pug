extends layout

block content
    script(src='javascripts/controllers/notes.controller.js')
    script(src='http://maps.google.com/maps/api/js?key=AIzaSyAmhHjISB0MUEDdB5-5OCbfuxmXwqVibSE')
    script(src='/javascripts/map.js')

    div(ng-app='notes' ng-controller='NotesCtrl')
        p1 Create note

        #map

        form(ng-submit='createNote()')
            div.form-group
                label.control-label(for='note') note
                input.form-control(type='text', id='note', ng-model='note')
                input(id ='lat', ng-model='lat')
                input(id ='lng', ng-model='lng')
            div.form-group
                button.btn.btn-primary(type='submit') create note